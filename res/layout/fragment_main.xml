<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            tools:context="com.gmail.alexellingsen.g2skintweaks.MainActivity.MainFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            style="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="@string/information_header"/>

        <TextView
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:text="@string/information_text"/>

        <TextView
            style="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:layout_marginTop="6dip"
            android:text="@string/title_general"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginBottom="12dip"
            android:background="@android:color/darker_gray"/>

        <CheckBox
            android:id="@+id/chb_remove_dividers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:text="@string/enable_remove_dividers"/>

        <CheckBox
            android:id="@+id/chb_replace_switch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:text="@string/enable_replace_switch"/>

        <ImageView
            android:id="@+id/imageview_replace_switch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:contentDescription="@null"
            android:src="@drawable/image_replace_switch"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:background="?android:attr/dividerVertical"/>

        <CheckBox
            android:id="@+id/chb_recent_apps_opacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:text="@string/enable_recent_apps_opacity"/>

        <TextView
            android:id="@+id/txt_recent_apps_opacity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dip"
            android:gravity="right"
            android:text="@null"/>

        <SeekBar
            android:id="@+id/seek_recent_apps_opacity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:max="255"/>

        <TextView
            style="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:layout_marginTop="6dip"
            android:text="@string/messenger_customization"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginBottom="12dip"
            android:background="@android:color/darker_gray"/>

        <CheckBox
            android:id="@+id/chb_custom_bubble_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/enable_custom_bubble_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_set_custom_color"/>

        <include
            android:id="@+id/custom_bubble_colors"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/color_picker_buttons"/>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip">

            <CheckBox
                android:id="@+id/chb_bubble_transparency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transparency"/>

            <TextView
                android:id="@+id/txt_bubble_transparency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dip"
                android:layout_gravity="bottom|right"
                android:gravity="bottom|right"
                android:text="@null"/>

        </FrameLayout>

        <SeekBar
            android:id="@+id/seek_bubble_transparency"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="255"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:background="?android:attr/dividerVertical"/>

        <CheckBox
            android:id="@+id/chb_custom_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:text="@string/enable_custom_bubble"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:id="@+id/spinner_bubbles"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/image_square_bubble"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:background="?android:attr/dividerVertical"/>

        <CheckBox
            android:id="@+id/chb_sms_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="@string/enable_text_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_set_text_color"/>

        <include
            android:id="@+id/sms_text_colors"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/color_picker_buttons"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:background="?android:attr/dividerVertical"/>

        <CheckBox
            android:id="@+id/chb_conversation_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:text="@string/enable_conversation_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_conversation_color"/>

        <include
            android:id="@+id/conversation_colors"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/color_picker_buttons"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:background="?android:attr/dividerVertical"/>

        <CheckBox
            android:id="@+id/chb_smaller_sms_size"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_sms_smaller_size"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:background="?android:attr/dividerVertical"/>

        <CheckBox
            android:id="@+id/chb_turn_on_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:checked="true"
            android:text="@string/turn_on_screen_new_sms"/>

        <CheckBox
            android:id="@+id/chb_enable_power_led"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:checked="true"
            android:enabled="false"
            android:text="@null"/>

        <Button
            android:id="@+id/btn_request_root"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:enabled="false"
            android:text="@string/request_root"/>
    </LinearLayout>

</ScrollView>